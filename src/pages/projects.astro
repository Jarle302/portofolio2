---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

type project = {
  title: string;
  description: string;
  imgSrc: string;
  githubLink: string;
  liveLink: string;
};
const projects: project[] = [
  {
    title: "Holidaze",
    description: `Holidaze is a comprehensive web application designed for seamless venue booking and management. It provides an intuitive interface for users to explore, book, and manage venues effortlessly.
Browse and Search Venues: Easily find the perfect venue with detailed listings and search functionality.
User Registration: Customers and venue managers can register using their stud.noroff.no email.
Bookings Management: Customers can book venues and view upcoming reservations.
Venue Management: Venue managers can create, update, and delete venues, and manage bookings.
User Account Control: Users can log in, update their profile, and manage their accounts.`,
    imgSrc: "/holidaze.jpg",
    liveLink: "https://holidazejarle.netlify.app/",
    githubLink: "https://github.com/Jarle302/holidaze",
  },
  {
    title: "Silk 'n Sound",
    description: "ecom",
    imgSrc: "/silknsound.jpg",
    liveLink: "https://silkandsound.netlify.app/",
    githubLink: "https://github.com/Jarle302/js-frameworks-ca",
  },
  {
    title: "Collective Chest",
    description: "Test",
    imgSrc: "/collectivechest.jpg",
    liveLink: "https://papaya-swan-bab731.netlify.app/",
    githubLink: "https://github.com/Jarle302/sp2Next",
  },
];
---

<Layout path="/projects" title="Projects">
  <main>
    <h1>Projects</h1>
    <div class="flex flex-col gap-14 items-center">
      {projects.map((project) => <ProjectCard {...project} />)}
    </div>
  </main>
</Layout>
